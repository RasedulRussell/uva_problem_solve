#include<bits/stdc++.h>
using namespace std;

int main(){
    int k;
    while( cin >> k && k ){
        string plainText;
        cin >> plainText;
        int n = (int)plainText.size();
        vector<int>cipherCode;
        for( int i = 0; i < n; i++ ){
            if( plainText[i] == '.' ){
                cipherCode.push_back(27);
            }else if( plainText[i] == '_' ){
                cipherCode.push_back(0);
            }else{
                cipherCode.push_back( plainText[i] - 'a' + 1 );
            }
        }
        vector<int>plainCode(n);
        for( int i = 0; i < n; i++ ){
            plainCode[(k*i)%n] = (cipherCode[i]+i)%28;
        }
        string result = "";
        for( int i = 0; i < n; i++ ){
            char ch ;
            if(plainCode[i] == 0){
                ch = '_';
            }else if( plainCode[i] == 27 ){
                ch = '.';
            }else{
                ch = 'a' + (plainCode[i]-1);
            }
            result.push_back(ch);
        }
        cout << result << endl;
    }
}

